@model WebTaxes.Models.TaxPaer

@{
    ViewBag.Title = "Details";
}


<div class="container">
    <div class="col-md-3">
        <h2>Details</h2>

        <div>

            <h4>TaxPaer</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Department.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Department.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.DocumentType.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DocumentType.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Municipality.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Municipality.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FirsName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FirsName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.lastName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.lastName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UserName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Phone)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Address)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Document)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Document)
                </dd>

            </dl>
        </div>
       <p>
           @Html.ActionLink("Edit", "Edit", new { id = Model.TaxPaerId }, new { @class = "btn btn-info" })
       </p>
         <p>
             @Html.ActionLink("Add Property", "AddProperty", new { id = Model.TaxPaerId }, new { @class = "btn btn-warning" })
             
         </p> 
        <p>
         @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-default" })
        </p>
    

    </div>
    <div class="col-md-9">
        <h2>Properties</h2>
        <br />
        <br />

        @if (Model.Properties.Count == 0)
        {
            <br /><br />
            <h2>No properties added yet.</h2>

        }
        else
        {
            <table class="table">
                <tr>
                    <th>
                        @*Department*@
                        @Html.DisplayNameFor(model => model.Properties.FirstOrDefault().Department.Name)
                    </th>
                    <th>
                        @*Municipality*@
                        @Html.DisplayNameFor(model => model.Properties.FirstOrDefault().Municipality.Name)
                    </th>
                    <th>
                        @*Property Type*@
                        @Html.DisplayNameFor(model => model.Properties.FirstOrDefault().PropertyType.Description)
                    </th>
                    <th>
                        @*Phone*@
                        @Html.DisplayNameFor(model => model.Properties.FirstOrDefault().Phone)
                    </th>
                    <th>
                        @*Address*@
                        @Html.DisplayNameFor(model => model.Properties.FirstOrDefault().Address)
                    </th>
                    <th>
                        @*Stratum*@
                        @Html.DisplayNameFor(model => model.Properties.FirstOrDefault().Stratum)
                    </th>
                    <th>
                        @*Area*@
                        @Html.DisplayNameFor(model => model.Properties.FirstOrDefault().Area)
                    </th>
                    <th>
                        @*Area*@
                        @Html.DisplayNameFor(model => model.Properties.FirstOrDefault().Value)
                    </th>
                    <th>
                    </th>
                    <th>
                    </th>
                    <th>
                    </th>
                </tr>

                @foreach (var item in Model.Properties)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(p => item.Department.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(p => item.Municipality.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(p => item.PropertyType.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(p => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(p => item.Address)
                        </td>
                        <td align="right">
                            @Html.DisplayFor(p => item.Stratum)
                        </td>
                        <td align="right">
                            @Html.DisplayFor(p => item.Area)
                        </td>
                        <td align="right">
                            @Html.DisplayFor(p => item.Value)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditProperty", new
                       {
                           propertyId = item.PropertyId,
                           taxPaerId = item.TaxPaerId
                       }, new { @class = "btn btn-info" })

                        </td>
                        <td>
                            @Html.ActionLink("Taxes", "ShowTaxes", new
                       {
                           propertyId = item.PropertyId}, new { @class = "btn btn-primary" })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "DeleteProperty", new { id = item.PropertyId },
                                                 new { @class = "btn btn-danger",
                                                       onClick = "return confirm('Are you sure to delete this record?')" })
                        </td>
                    </tr>
                }

            </table>
        }
    </div>
</div>
